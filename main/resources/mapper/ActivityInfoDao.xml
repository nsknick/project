<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.ActivityInfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.ActivityInfoEntity" id="activityinfoMap">
        <result property="activityname" column="activityname"/>
        <result property="activitytype" column="activitytype"/>
        <result property="tupian" column="tupian"/>
        <result property="time" column="time"/>
        <result property="people" column="people"/>
        <result property="location" column="location"/>
        <result property="introduction" column="introduction"/>
        <result property="isReviewed" column="isReviewed"/>
        <result property="reviewResponse" column="reviewResponse"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.ActivityInfoVO" >
		SELECT * FROM activityinfo  activityinfo
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.ActivityInfoVO" >
		SELECT  activityinfo.* FROM activityinfo  activityinfo
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.ActivityInfoView" >

		SELECT  activityinfo.* FROM activityinfo  activityinfo
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.ActivityInfoView" >
		SELECT * FROM activityinfo  activityinfo <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

</mapper>
